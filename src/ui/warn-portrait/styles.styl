.warn-portrait

  position absolute
  top 0; left 0; right 0; bottom 0;

  background linear-gradient(to bottom, $color-bg-top 0%, $color-bg-bottom 100%)

  display flex
  align-items center
  justify-content center

  pointer-events all

  z-index 100

.warn-portrait-container

  width 80vw

  display flex
  align-items center
  flex-direction column

  i

    flex 0
    font-size 40px
    margin-bottom 20px

  p

    font-size 1.25rem
    text-align center
    margin-bottom 10px
