.ui-bots

  position absolute
  top 0; left 0; right 0; bottom 0;

  overflow hidden

  display flex
  align-items center
  justify-content center

.ui-bots-container

  position relative

  flex none

  width 100%
  height 100%

  min-width 1000px
  max-width 1200px
  min-height 800px
  max-height 1000px

  @media all and (max-width @min-width)

    display none

  @media all and (max-height @min-height)

    display none

.ui-bot

  position absolute

positionBackgroundBot(x, y, size)

  top y
  left x
  width size
  height size
  margin-top size * -0.5
  margin-left size * -0.5

.ui-bot-1
  positionBackgroundBot(8%, 26%, 200px)

.ui-bot-2
  positionBackgroundBot(10%, 70%, 180px)

.ui-bot-3
  positionBackgroundBot(88%, 22%, 180px)

.ui-bot-4
  positionBackgroundBot(88%, 74%, 190px)
