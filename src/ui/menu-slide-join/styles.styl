.menu-slide-join

  display flex
  align-items center
  justify-content flex-start
  flex-direction column

  .ui-button-group

    width 100%

.menu-slide-join-input

  flex 1 2 100%

  display flex
  justify-content center

  position relative

  padding 5px
  margin-top 5px
  margin-bottom $button-shadow-height

  background-color transparent
  border-radius $button-border-radius
  border 3px solid white

  @media all and (min-width 480px) and (min-height 480px)

    padding 10px
    margin-top 10px
    margin-bottom 5px + $button-shadow-height
    border 4px solid white

  input

    position absolute
    top -9999px; left -9999px;

  &.focused

    background-color white

    .menu-slide-join-input-block

      color black

    .menu-slide-join-input-block.empty

      color rgb(210, 210, 210)

.menu-slide-join-input-block

  width 20px

  font-size 1.5rem
  font-family 'Channel', sans-serif
  text-align center
  user-select none

  @media all and (min-width 480px) and (min-height 480px)

    width 30px

    font-size 2rem
